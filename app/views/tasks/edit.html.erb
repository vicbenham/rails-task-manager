<div class="container text-center mt-5">
  <h1>Edit task</h1>

  <div class="container p-5">
    <%= form_with model: @task do |f| %>
    <div class="d-flex flex-column align-items-center">
      <div class="d-flex flex-column mb-3 align-items-start">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
      </div>
      <div class="d-flex flex-column mb-3 align-items-start">
        <%= f.label :details %>
        <%= f.text_field :details, class: "form-control", placeholder: "Description" %>
      </div>
    </div>
      <div class="mb-3 align-items-start">
        <%= f.check_box :completed, class: "form-check-input me-1" %>
        <%= f.label :completed %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to "Back to list", tasks_path, class: "text-decoration-none" %>
</div>
