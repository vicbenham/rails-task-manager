<div class="container text-center mt-5">
  <h1 class="mb-4"><%= @task.title %></h1>

  <div class="d-flex flex-column align-items-center">
    <div class="d-flex flex-column align-items-center card p-4 mb-3">
      <em><%= @task.details %></em>
    </div>

    <div class="d-flex mb-5">
      <input type="checkbox" class="me-2 form-check-input" <%= @task.completed ? "checked" : "" %>>
      <strong><p class="m-0"><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p></strong>
    </div>
  </div>

  <div class="d-flex flex-column align-items-center">
    <%= link_to '<i class="fa-solid fa-pen-to-square me-1"></i> Edit this task'.html_safe, edit_path, class: "btn btn-success mb-3" %>
    <%= link_to '<i class="fa-solid fa-rotate-left me-1"></i> Back to list'.html_safe, tasks_path, class: "btn btn-primary" %>
  </div>
</div>
